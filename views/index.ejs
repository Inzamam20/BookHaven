    <div class="product-device shadow-sm d-none d-md-block"></div>
    <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
  </div>
  
  <div class="mt-5 text-center">
    <h2 class="mt-3">Featured Products</h2>
    <h5 class="mt-3">Check & Get Your Desired Product!</h5>
  </div>
  

<div class="container mt-5">
<div class="row row-cols-1 row-cols-md-3 g-4">

  <% products.forEach((product, index) => { %>
    <% product.Thumbnail = product.Thumbnail.toString('base64'); %>
    <div class="col" style="width: 300px; height: 600px; margin-right: 10px; margin-bottom: 10px;">
      <div class="card h-100">
        <img src="data:image;base64, <%= product.Thumbnail %>" class="card-img-top" alt="<%= product.Name %>">
        <div class="card-body text-center">
          
          <h5 class="card-title"><a href="products/<%= product.Name %>"> <%= product.Name %></a></h5>
          
          <!-- Fixed-size label for product info -->
          <p class="card-info">Brand: <%= product.Brand %></p>    
          
          <!-- Horizontal line after brand name -->
          <hr class="my-2">
          
          <!-- Volume selection using radio buttons and Price -->
          <div class="d-flex justify-content-between align-items-center">
            
            <!-- Radio buttons -->
            <div class="d-flex align-items-center">
              <div class="form-check form-check-inline">
                <input class="form-check-input volume-radio" type="radio" name="volume<%= index %>" id="volume3ml<%= index %>" value="3ml" checked data-price="200">
                <label class="form-check-label" for="volume3ml<%= index %>">3ml</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input volume-radio" type="radio" name="volume<%= index %>" id="volume5ml<%= index %>" value="5ml" data-price="500">
                <label class="form-check-label" for="volume5ml<%= index %>">5ml</label>
              </div>
              <!-- Add more volume options as needed -->
            </div>
            
            <!-- Price with glamorous style -->
            <p class="card-price glamorous-text mt-3">&#2547;<span class="priceNumber"><%= product.Price %></span></p>
          </div>
          
          <!-- Horizontal line after description label -->
          <hr class="my-2">
  
          <!-- Description -->
          <p class="card-text text-ellipsis"><%= product.description %></p>
          
        </div>
        <div class="card-footer d-flex justify-content-between">
          
          <!-- Add to Cart button on the left -->
          <button type="button" class="btn btn-primary">Add to Cart</button>
          
          <!-- Buy Now button on the right -->
          <button type="button" class="btn btn-success">Buy Now</button>
          
        </div>
      </div>
    </div>
  <% }); %>
  

</div>
