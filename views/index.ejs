      <% if (currentUser === null) { %>
            <!-- Log in and Sign Up Button -->
            <div class="text-end">
              <a href="/users/login"> <button type="button" class="btn btn-outline-light me-2">Login</button></a>
              <a href="/users/signup"> <button type="button" class="btn btn-warning me-3">Sign-up</button></a>
            </div>
        <% } else { %>
